<!-- Modal -->
<div class="modal fade" id="js-refuse-picture-modal" tabindex="-1" role="dialog" aria-labelledby="js-modal-label" aria-hidden="true">
  <div class="modal-dialog modal-dialog-centered lt-modal" role="document">
    <div class="modal-content lt-modal-tirelire">
      {{ form_start(form, {'attr': {'class': 'js-refuse-form'}, 'action': '#'}) }}
      <div class="modal-header">
        <h5 class="modal-title" id="js-modal-label">{{ 'orders.refuse_modal.title'|trans }}</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <h6 class="pb-2">{{ 'orders.refuse_modal.sub_title'|trans }}</h6>
        {{ form_rest(form) }}
      </div>
      <div class="modal-footer lt-modal-footer">
        <button type="button" class="btn btn-second" data-dismiss="modal">{{ 'orders.refuse_modal.close'|trans }}</button>
        <button type="submit" class="btn btn-prime btn-prime-modal">{{ 'orders.refuse_modal.confirm'|trans }}</button>
      </div>
      {{ form_end(form) }}
    </div>
  </div>
</div>
