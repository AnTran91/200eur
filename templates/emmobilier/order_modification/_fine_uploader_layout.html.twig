<!-- Fine Uploader Gallery template ====================================================================== -->
<script type="text/template" id="qq-template-gallery">
  <div class="qq-uploader-selector qq-uploader qq-gallery" qq-drop-area-text="{{ 'uploader.template.dropzone'|trans }}">
    <div class="qq-total-progress-bar-container-selector qq-total-progress-bar-container">
      <div role="progressbar" aria-valuenow="0" aria-valuemin="0" aria-valuemax="100" class="qq-total-progress-bar-selector qq-progress-bar qq-total-progress-bar"></div>
    </div>
    <div class="qq-upload-drop-area-selector qq-upload-drop-area" qq-hide-dropzone="qq-hide-dropzone">
      <span class="qq-upload-drop-area-text-selector"></span>
    </div>

    <div class="gallery-actions-controls">
      <div class="mr-auto">
        <div class="qq-upload-button-selector qq-upload-button">
          <i class="fas fa-cloud-upload-alt"></i>
          <span>{{ 'uploader.template.upload'|trans }}</span>
        </div>
        <!-- <div class="qq-upload-button qq-upload-toggle-all-selector js-check-all-uploader">
          <i class="fas fa-toggle-on"></i>
          <span>'uploader.template.select_all'|trans</span>
        </div> -->
      </div>
    </div>
    <span class="qq-drop-processing-selector qq-drop-processing">
      <span class="qq-drop-processing-spinner-selector qq-drop-processing-spinner"></span>
    </span>

    <ul class="qq-upload-list-selector qq-upload-list" role="region" aria-live="polite" aria-relevant="additions removals">
      <li class="js-uploaded-file">
        <span class="qq-upload-spinner-selector qq-upload-spinner"></span>
        <div class="qq-thumbnail-wrapper">
          <img class="qq-thumbnail-selector" qq-max-size="200" qq-server-scale="qq-server-scale">
          <div class="gallery-item-controls qq-hide">
            <!-- <div>
              <span class="gallery-item-remove qq-upload-delete-selector">
                <i class="fas fa-trash"></i>
              </span>
            </div> -->
            <div>
              <label class="control control---checkbox">
                <input type="checkbox" name="files[]" class="js-checkbox-uploader" value="" checked/>
                <div class="control__indicator qq-checkbox"></div>
              </label>
            </div>
          </div>

          <div class="thumbnail-info qq-upload-retry-selector">
            <button type="button" class="qq-upload-retry-selector qq-upload-retry">
              <i class="fas fa-undo"></i>
              {{ 'uploader.template.retry'|trans }}
            </button>
          </div>
        </div>
        <button type="button" class="qq-upload-delete-selector qq-upload-cancel">
          <i class="fas fa-times"></i>
        </button>

        <button type="button" class="qq-upload-cancel-selector qq-upload-cancel">
          <i class="fas fa-times"></i>
        </button>

        <div class="qq-file-info">
          <div class="qq-progress-bar-container-selector qq-progress-bar-container">
            <div role="progressbar" aria-valuenow="0" aria-valuemin="0" aria-valuemax="100" class="qq-progress-bar-selector qq-progress-bar"></div>
          </div>
          <div class="qq-file-name">
            <span class="qq-upload-file-selector qq-upload-file"></span>
          </div>
          <input class="qq-edit-filename-selector qq-edit-filename" tabindex="0" type="text">

          <p class="qq-upload-size-selector qq-upload-size"></p>
        </div>
        <div class="gallery-tags-controls">
          <div class="list-tags js-retouchs-list-group"></div>
          <!-- <button type="button" class="qq-upload-continue-selector qq-upload-actions">
            <i class="fas fa-undo"></i>
            {{ 'uploader.template.continue'|trans }}
          </button>
          <button type="button" class="qq-upload-pause-selector qq-upload-actions">
            <i class="fas fa-pause"></i>
            {{ 'uploader.template.pause'|trans }}
          </button> -->
        </div>
      </li>
    </ul>
  </div>
</script>
