{% extends 'admin/base.html.twig' %}

{% block title %}{{'admin.picture.pictures_list'|trans}}{% endblock %}

{% block content %}
<!-- BREADCRUMB-->
<section class="au-breadcrumb m-t-75">
    <div class="section__content section__content--p30">
        <div class="container-fluid">
            <div class="row">
                <div class="col-md-12">
                    <div class="au-breadcrumb-content">
                        <div class="au-breadcrumb-left">
                            <span class="au-breadcrumb-span">You are here:</span>
                            <ul class="list-unstyled list-inline au-breadcrumb__list">
                                <li class="list-inline-item active">
                                    <a href="#">Home</a>
                                </li>
                                <li class="list-inline-item seprate">
                                    <span>/</span>
                                </li>
                                <li class="list-inline-item">Dashboard</li>
                            </ul>
                        </div>
                        <a href="{{ path('admin_picture_edit', {'id': picture.id}) }}" class="btn btn-pill btn-primary">
                            <i class="fe fe-edit mr-1"></i>{{'admin.form.edit'|trans}}
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
<!-- END BREADCRUMB-->

    <section class="form-content">
        <div class="section__content section__content--p30">
            <div class="container-fluid">
                <div class="top-campaign">
                    <h3 class="title-3 m-b-30">{{'admin.picture.picture'|trans}}: {{ picture.pictureName }}</h3>
                    <div class="row">
                        <div class="col-md-4">
                            <img src="{{ picture.pictureDevPathThumb}}" alt="{{ picture.pictureName }}"/>
                        </div>
                        <div class="col-md-8">
                            <div class="table-responsive">
                                <table class="table table-top-campaign">
                                    <tbody>
                                      <tr>
                                          <td>{{'admin.picture.name'|trans}}</td>
                                          <td>{{ picture.pictureName }}</td>
                                      </tr>
                                      <tr>
                                          <td>{{'admin.common.status'|trans}}</td>
                                          <td>{{ picture.pictureStatus }}</td>
                                      </tr>
                                      <tr>
                                          <td>{{'admin.order.order'|trans}}</td>
                                          <td>{{ picture.order }}</td>
                                      </tr>
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                    <div class="table-responsive"><hr>
                        <table class="table table-top-campaign">
                            <tbody>
                              <tr>
                                  <td>{{'admin.retouch.retouch'|trans}}</td>
                                  {% for retouch in picture.pictureDetail %}
                                    <td>{{ retouch }}</td>
                                  {% endfor %}
                              </tr>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
      </section>


{% endblock %}
