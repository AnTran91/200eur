{% extends 'admin/base.html.twig' %}

{% trans_default_domain 'admin' %}
{% block title %}
  {{'admin.group.group_show'|trans}}
{% endblock %}

{% block content %}
  <!-- BREADCRUMB-->
  <section class="au-breadcrumb m-t-75">
    <div class="section__content section__content--p30">
      <div class="container-fluid">
        <div class="row">
          <div class="col-md-12">
            <div class="au-breadcrumb-content">
              <div class="au-breadcrumb-left">
                <ul class="list-unstyled list-inline au-breadcrumb__list">
                  <li class="list-inline-item active">
                    <a href="{{ path('admin_group_index') }}">
                      <i class="fe fe-home"></i>
                      {{'admin.group.group_list'|trans}}</a>
                  </li>
                  <li class="list-inline-item seprate">
                    <span>/</span>
                  </li>
                  <li class="list-inline-item">{{'admin.group.group_show'|trans}}</li>
                </ul>
              </div>
              <a href="{{ path('admin_group_edit', {'id': group.id}) }}" class="btn btn-pill btn-primary">
                <i class="fe fe-edit mr-1"></i>
                {{'admin.form.edit'|trans}}
              </a>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>
  <!-- END BREADCRUMB-->

  <section class="form-content">
    <div class="section__content section__content--p30">
      <div class="container-fluid">
        <div class="row">
          <div class="col-sm-6 col-lg-6">
            <div class="card p-3">
              <div class="d-flex align-items-center">
                <span class="stamp stamp-md bg-pink mr-3">
                  <i class="fas fa-pen-nib"></i>
                </span>
                <div>
                  <small class="text-muted">{{ 'admin.group.name'|trans}}</small>
                  <h4 class="m-0">
                    <a href="javascript:void(0)">
                      <small>{{ group.name }}</small>
                    </a>
                  </h4>
                </div>
              </div>
            </div>
          </div>
          <div class="col-sm-6 col-lg-6">
            <div class="card p-3">
              <div class="d-flex align-items-center">
                <span class="stamp stamp-md bg-green mr-3">
                  <i class="fas fa-user-ninja"></i>
                </span>
                <div>
                  <small class="text-muted">{{ 'admin.group.count_roles'|trans }}</small>
                  <h4 class="m-0">
                    <a href="javascript:void(0)">
                      <small>{{ group.roles|length }} {{ 'admin.common.unit.role'|trans }}</small>
                    </a>
                  </h4>
                </div>
              </div>
            </div>
          </div>
        </div>
        <h3 class="title-5 m-b-35">{{'admin.group.roles'|trans}}</h3>
        <div class="row">
          {% for role in group.roles %}
            <div class="col-md-4">
              <div class="card">
                <div class="card-header">
                  {{ role|array_search(role_hierarchy)|trans }}
                </div>
                <div class="card-body">
                  {{ role|trans }}
                </div>
              </div>
            </div>
          {% endfor %}
        </div>
      </div>
    </div>
  </section>

{% endblock %}
