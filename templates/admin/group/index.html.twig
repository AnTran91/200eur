{% extends 'admin/base.html.twig' %}

{% trans_default_domain 'admin' %}
{% block title %}
  {{'admin.group.group_list'|trans}}
{% endblock %}

{% block content %}
  <!-- BREADCRUMB-->
  <section class="au-breadcrumb m-t-75">
    <div class="section__content section__content--p30">
      <div class="container-fluid">
        <div class="row">
          <div class="col-md-12">
            <div class="au-breadcrumb-content">
              <div class="au-breadcrumb-left">
                <ul class="list-unstyled list-inline au-breadcrumb__list">
                  <li class="list-inline-item active">
                    <a href="#">
                      <i class="fe fe-home"></i>
                      {{'admin.group.group_list'|trans}}</a>
                  </li>
                  <li class="list-inline-item seprate">
                    <span>/</span>
                  </li>
                </ul>
              </div>
              <a href="{{ path('admin_group_new') }}" class="btn btn-pill btn-primary">
                <i class="fe fe-plus-circle"></i>
                {{'admin.group.group_new'|trans}}
              </a>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>
  <!-- END BREADCRUMB-->

  <section class="form-content">
    <div class="section__content section__content--p30">
      <div class="container-fluid">
        <h3 class="title-5 m-b-35">{{'admin.group.group_list'|trans}}</h3>
        <!-- GLOBAL FILTER FORM -->
        {{ search_pagination_render(groups) }}
        <!-- END GLOBAL FILTER FORM -->

        <div class="card">
          <div class="card-body p-0">
            <div class="table-responsive">
              <table class="table card-table table-vcenter text-nowrap" id="js-card-table">
                <thead>
                  <tr>
                    <th>{{ pagination_sortable(groups, 'admin.group.name'|trans, 'name') }}</th>
                    <th></th>
                  </tr>
                </thead>
                <tbody>
                  {% for group in groups %}
                    <tr>
                      <td>{{ group.name }}</td>
                      <td>
                        <div class="table-data-feature">
                          <a href="{{ path('admin_group_show', {'id': group.id}) }}" class="item" data-toggle="tooltip" data-placement="top" title="{{ 'admin.common.action.show'|trans }}" data-original-title="More">
                            <i class="zmdi zmdi-eye"></i>
                          </a>
                          <a href="{{ path('admin_group_edit', {'id': group.id}) }}" class="item" data-toggle="tooltip" data-placement="top" title="{{ 'admin.common.action.edit'|trans }}" data-original-title="More">
                            <i class="fe fe-edit"></i>
                          </a>
                        </div>
                      </td>
                    </tr>
                  {% else %}
                    <tr class="odd">
                      <td valign="top" colspan="2" class="text-center">{{ 'admin.paginator.empty_table'|trans|raw }}</td>
                    </tr>
                  {% endfor %}
                </tbody>
              </table>
            </div>
          </div>
          <div class="card-footer">
            <div class="float-right">
              {{ js_pagination_render(groups) }}
            </div>
          </div>

        </div>
        <!-- END ORDER TABLE -->
      </div>
    </div>
  </section>

{% endblock %}
