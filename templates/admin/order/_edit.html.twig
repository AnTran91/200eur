{% trans_default_domain 'admin' %}

<div class="row">
    {% include 'admin/order/_order_detail_header.html.twig' with {
        'order' : order
    } %}
    <div class="col-sm-12 col-lg-12">
        {{ form_start(form) }}

        <div class="card">
            <div class="card-header">
                <h3 class="card-title">{{ 'admin.order.order_edit'|trans }}</h3>
            </div>
            <div class="card-body">

                <div class="form-row">
                    <div class="col-md-4 mb-3">
                        {{ form_row(form.orderStatus) }}
                    </div>
                    <div class="col-md-4 mb-3">
                        {{ form_row(form.affectedTo) }}
                    </div>
                    <div class="col-md-4 mb-3">
                        {{ form_row(form.production) }}
                    </div>
                </div>

                <h4 class="pt-4 pb-4 border-bottom">{{ 'admin.order.order_detail_edit'|trans }}</h4>
                {{ form_row(form.pictures) }}
            </div>
            <div class="card-footer">
                <div class="btn-list float-right">
                    {{ form_widget(form.updatePrice) }}
                    {{ form_widget(form.update) }}
                    {{ form_widget(form.cancel) }}
                </div>
            </div>
        </div>
        {{ form_rest(form) }}
        {{ form_end(form) }}
    </div>
</div>