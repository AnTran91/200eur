{% extends 'admin/base.html.twig' %}

{% trans_default_domain 'admin' %}

{% block title %}
  {{'admin.order.order_edit'|trans}}
{% endblock %}

{% block stylesheets %}
  {{ parent()}}
  <link rel="stylesheet" href="{{ asset('css/kendo.bootstrap-v4.min.css', 'kendo_ui') }}">
  <link rel="stylesheet" href="{{ asset('image-picker.min.css', 'image_picker') }} "/>
{% endblock %}

{% block content %}
  <!-- BREADCRUMB-->
  <section class="au-breadcrumb m-t-75">
    <div class="section__content section__content--p30">
      <div class="container-fluid">
        <div class="row">
          <div class="col-md-12">
            <div class="au-breadcrumb-content">
              <div class="au-breadcrumb-left">
                <ul class="list-unstyled list-inline au-breadcrumb__list">
                  <li class="list-inline-item active">
                    <a href="{{ path('admin_order_index') }}">
                      <i class="fe fe-home"></i>
                      {{'admin.order.orders_list'|trans}}</a>
                  </li>
                  <li class="list-inline-item seprate">
                    <span>/</span>
                  </li>
                  <li class="list-inline-item">
                    <span>{{'admin.order.order_edit'|trans}}</span>
                  </li>
                </ul>
              </div>

              <a href="{{ path('admin_order_show', {'id': order.id}) }}" class="btn btn-pill btn-primary">
                {{ 'admin.order.actions.show'|trans }}
              </a>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>
  <!-- END BREADCRUMB-->

  <section class="form-content" id="js-edit-section">
    <div class="section__content section__content--p30">
      <div class="container-fluid">
        {% include 'admin/order/_edit.html.twig' %}
      </div>
    </div>
  </section>

{% endblock %}

{% block javascripts %}
  {{ parent() }}
  <script src="{{ asset('bundles/fosjsrouting/js/router.min.js') }}"></script>
  <script src="{{ path('fos_js_routing_js', { callback: 'fos.Router.setData' }) }}"></script>
  <script src="{{ asset('image-picker.min.js', 'image_picker') }}"></script>
  <script src="{{ asset('jquery.form.min.js', 'jquery_form') }}"></script>
  <script src="{{ asset('jquery.collection.min.js', 'admin_js') }}"></script>
  <script src="{{ asset('js/kendo.core.min.js', 'kendo_ui') }}"></script>
  <script src="{{ asset('js/kendo.upload.min.js', 'kendo_ui') }}"></script>
  <!-- Main JS-->
  <script src="{{ asset('order-edit.min.js', 'admin_js') }}"></script>
  <script>
    (function($) {
      // USE STRICT
      "use strict";
      var OrderEdit = new Order($("#js-edit-section"), "{{ order.deliveryTime.id }}");
    })(jQuery);
  </script>
{% endblock %}
