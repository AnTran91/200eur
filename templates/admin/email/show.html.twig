{% extends 'admin/base.html.twig' %}

{% trans_default_domain 'admin' %}

{% block title %}{{ 'admin.email.title'|trans }}{% endblock %}

{% block content %}
    <!-- BREADCRUMB-->
    <section class="au-breadcrumb m-t-75">
        <div class="section__content section__content--p30">
            <div class="container-fluid">
                <div class="row">
                    <div class="col-md-12">
                        <div class="au-breadcrumb-content">
                            <div class="au-breadcrumb-left">
                                <ul class="list-unstyled list-inline au-breadcrumb__list">
                                    <li class="list-inline-item active">
                                        <a href="{{ path('admin_user_index') }}">
                                            <i class="fe fe-home"></i>
                                            {{'admin.user.user_list'|trans}}</a>
                                    </li>
                                    <li class="list-inline-item seprate">
                                        <span>/</span>
                                    </li>
                                    <li class="list-inline-item">{{ 'admin.email.send'|trans }}</li>
                                </ul>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <!-- END BREADCRUMB-->

    <section class="form-content">
        <div class="section__content section__content--p30">
            <div class="container-fluid">
                <div class="col-md-12">
                    {{ form_start(form) }}

                    <div class="card">
                        <div class="card-header">
                            <h3 class="card-title">{{ 'admin.user.send_emails'|trans }}</h3>
                        </div>
                        <div class="card-body">
                            {{ form_errors(form) }}
                            <div class="form-group">
                                <div class="row align-items-center">
                                    <label class="col-sm-2">{{ form_label(form.to) }}:</label>
                                    <div class="col-sm-10">
                                        {{ form_widget(form.to) }}
                                        {{ form_errors(form.to) }}
                                    </div>
                                </div>
                            </div>
                            <div class="form-group">
                                <div class="row align-items-center">
                                    <label class="col-sm-2">{{ form_label(form.subject) }}:</label>
                                    <div class="col-sm-10">
                                        {{ form_widget(form.subject) }}
                                        {{ form_errors(form.subject) }}
                                    </div>
                                </div>
                            </div>
                            {{ form_row(form.content) }}
                            {{ form_rest(form) }}
                        </div>
                        <div class="card-footer">
                            <div class="btn-list text-right">
                                <button type="button" class="btn btn-secondary btn-space">{{ 'admin.form.reset'|trans }}</button>
                                <button type="submit" class="btn btn-primary btn-space">{{ 'admin.form.send'|trans }}</button>
                            </div>
                        </div>
                    </div>
                </div>

                {{ form_end(form) }}
            </div>
        </div>
    </section>


{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script src="{{ asset('selectize/selectize.min.js', 'admin_vendor') }}"></script>

    <script>
        (function ($) {
            // USE STRICT
            "use strict";

            $('.js-select-users').selectize({
                render: {
                    option: function (data, escape) {
                        return '<div>' +
                            '<span class="image"><img src="' + data.image + '" alt=""></span>' +
                            '<span class="title">' + escape(data.text) + '</span>' +
                            '</div>';
                    },
                    item: function (data, escape) {
                        return '<div>' +
                            '<span class="image"><img src="' + data.image + '" alt=""></span>' +
                            escape(data.text) +
                            '</div>';
                    }
                }
            });
        })(jQuery);
    </script>
{% endblock %}
