{% block block_title_row %}
  <div class="row p-4">
    <div class="col-md-8">
      <h5 class="color-black">{{- label is not same as(false) ? label -}}</h5>
    </div>
    <div class="col-md-4">
      <div class="float-right">
        <form class="d-inline" method="post" action="{{ path('admin_field_group_delete', {'id': value}) }}">
          <input type="hidden" name="_method" value="DELETE">
          <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ value) }}">
          <div class="btn-list">
            <button type="submit" class="btn btn-icon btn-danger js-confirm-alert m-0">
              <i class="fas fa-trash-alt"></i>
            </button>
            <a role="button" class="btn btn-icon btn-primary m-0" href="{{ path('admin_field_group_edit', {'id': value})}}">
              <i class="fas fa-pencil-alt"></i>
            </a>
          </div>
        </form>
      </div>
    </div>
  </div>
{% endblock block_title_row %}
