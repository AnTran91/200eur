{% extends 'admin/base.html.twig' %}

{% trans_default_domain 'admin' %}

{% block title %}{{'admin.delivery_time.delivery_time'|trans}}:
  {{ deliveryTime.time }}
{% endblock %}

{% block content %}
  <!-- BREADCRUMB-->
  <section class="au-breadcrumb m-t-75">
    <div class="section__content section__content--p30">
      <div class="container-fluid">
        <div class="row">
          <div class="col-md-12">
            <div class="au-breadcrumb-content">
              <div class="au-breadcrumb-left">
                <ul class="list-unstyled list-inline au-breadcrumb__list">
                  <li class="list-inline-item active">
                    <a href="{{ path('admin_delivery_time_list') }}">
                      <i class="fe fe-home"></i>
                      {{'admin.delivery_time.delivery_time_list'|trans}}</a>
                  </li>
                  <li class="list-inline-item seprate">
                    <span>/</span>
                  </li>
                  <li class="list-inline-item">{{'admin.delivery_time.delivery_time'|trans}}</li>
                </ul>
              </div>
              <a href="{{ path('admin_delivery_time_edit', {'id': deliveryTime.id}) }}" class="btn btn-pill btn-primary">
                <i class="fe fe-edit mr-1"></i>
                {{'admin.form.edit'|trans}}
              </a>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>
  <!-- END BREADCRUMB-->

  <section class="form-content">
    <div class="section__content section__content--p30">
      <div class="container-fluid">
        <div class="card">
          <div class="card-header">
            <strong>{{'admin.delivery_time.delivery_time'|trans}}</strong>
          </div>
          <div class="card-body">
            <div class="table-responsive">
              <table class="table table-top-campaign">
                <tbody>
                  <tr>
                    <td>{{ 'admin.delivery_time.time'|trans }}</td>
                    <td>{{ deliveryTime.time }}</td>
                  </tr>
                  <tr>
                    <td>{{ 'admin.delivery_time.unit'|trans }}</td>
                    <td>{{ deliveryTime.unit|trans }}</td>
                  </tr>
                  <tr>
                    <td>{{ 'admin.delivery_time.globals'|trans }}</td>
                    <td><i class="{{ deliveryTime.global ? 'fe fe-check' : 'fe fe-x' }}"></i></td>
                  </tr>
                  <tr>
                    <td>{{ 'admin.delivery_time.default'|trans }}</td>
                    <td><i class="{{ deliveryTime.selectedByDefault ? 'fe fe-check' : 'fe fe-x' }}"></i></td>
                  </tr>
                  <tr>
                    <td>{{ 'admin.application.type'|trans }}</td>
                    <td>{{ deliveryTime.appType|trans }}</td>
                  </tr>
                </tbody>
              </table>

            </div>
          </div>
          <div class="card-footer">
            <div class=" text-right">
              <a href="{{ path('admin_delivery_time_list') }}" class="btn btn-primary">{{ button_label|default('admin.link.back'|trans) }}</a>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
</section>
{% endblock %}
