{% extends 'admin/base.html.twig' %}

{% trans_default_domain 'admin' %}

{% block title %}{{'admin.holidays.holiday'|trans}}{% endblock %}

{% block content %}
<!-- BREADCRUMB-->
<section class="au-breadcrumb m-t-75">
  <div class="section__content section__content--p30">
    <div class="container-fluid">
      <div class="row">
        <div class="col-md-12">
          <div class="au-breadcrumb-content">
            <div class="au-breadcrumb-left">
              <ul class="list-unstyled list-inline au-breadcrumb__list">
                <li class="list-inline-item active">
                  <a href="{{ path('admin_holidays_index') }}"><i class="fe fe-home"></i> {{'admin.holidays.holiday'|trans}}</a>
                </li>
                <li class="list-inline-item seprate">
                  <span>/</span>
                </li>
                <li class="list-inline-item">{{'admin.holidays.holiday'|trans}}: {{ holiday.title }}</li>
              </ul>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
<!-- END BREADCRUMB-->

<section class="form-content">
  <div class="section__content section__content--p30">
    <div class="container-fluid">
      <div class="card">
        <div class="card-header">
          <strong class="card-title">
            {{'admin.holidays.holiday'|trans }}: {{ holiday.title }}
          </strong>
        </div>
        <div class="card-body">
          <div class="table-responsive">
            <table class="table table-top-campaign">
              <tbody>
                <tr>
                  <td>{{'admin.holidays.title'|trans}}</td>
                  <td>{{ holiday.title }}</td>
                </tr>
                <tr>
                  <td>{{'admin.common.start_date'|trans}}</td>
                  <td>{{ holiday.startDate ? holiday.startDate|date('d-m-Y H:i:s') : '' }}</td>
                </tr>
                <tr>
                  <td>{{'admin.common.end_date'|trans}}</td>
                  <td>{{ holiday.endDate ? holiday.endDate|date('d-m-Y H:i:s') : '' }}</td>
                </tr>
              </tbody>
            </table>
          </div>

        </div>
        <div class="card-footer">
          <a href="{{ path('admin_holidays_index') }}" class="btn btn-primary btn">
            {{ 'admin.link.back'|trans }}
          </a>
        </div>
      </div>
    </div>
  </div>
</section>

{% endblock %}
