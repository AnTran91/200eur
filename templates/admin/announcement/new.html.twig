{% extends 'admin/base.html.twig' %}

{% trans_default_domain 'admin' %}

{% block title %}{{'admin.announcement.announcement'|trans}}
{% endblock %}

{% block stylesheets %}
  {{ parent()}}
  <link rel="stylesheet" href="{{ asset('css/bootstrap-datetimepicker.min.css', 'datetimepicker') }}"/>
  <link rel="stylesheet" href="{{ asset('glyphicon.min.css', 'admin_css') }}"/>
{% endblock %}

{% block content %}
  <!-- BREADCRUMB-->
  <section class="au-breadcrumb m-t-75">
    <div class="section__content section__content--p30">
      <div class="container-fluid">
        <div class="row">
          <div class="col-md-12">
            <div class="au-breadcrumb-content">
              <div class="au-breadcrumb-left">
                <ul class="list-unstyled list-inline au-breadcrumb__list">
                  {# <li class="list-inline-item active">
                    <a href="{{ path('admin_announcement_check') }}">
                      <i class="fe fe-home"></i>
                      {{ 'admin.holidays.holidays_list'|trans }}</a>
                  </li> #}
                  <li class="list-inline-item seprate">
                    <span>/</span>
                  </li>
                  <li class="list-inline-item">{{ 'admin.announcement.edit'|trans }}</li>
                </ul>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>
  <!-- END BREADCRUMB-->

  <section class="form-content">
    <div class="section__content section__content--p30">
      <div class="container-fluid">
        {{ include('admin/announcement/_form.html.twig') }}
      </div>
    </div>
  </section>

{% endblock %}

{% block javascripts %}
  {{ parent() }}
  <script src="{{ asset('moment.min.js', 'momentjs') }}"></script>
  <script src="{{ asset('locale/fr.js', 'momentjs') }}"></script>
  <script src="{{ asset('js/bootstrap-datetimepicker.min.js', 'datetimepicker') }}"></script>
  <script>
    $(document).ready(function() {
      $(document).find('.js-datepicker').each(function() {
        $(this).datetimepicker({locale:'fr', format: 'L'});
      });
    });
  </script>
{% endblock %}
