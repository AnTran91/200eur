{% extends 'admin/base.html.twig' %}

{% trans_default_domain 'admin' %}

{% block title %}{{'admin.email.title'|trans}}{% endblock %}

{% block content %}
<!-- BREADCRUMB-->
<section class="au-breadcrumb m-t-75">
    <div class="section__content section__content--p30">
        <div class="container-fluid">
            <div class="row">
                <div class="col-md-12">
                    <div class="au-breadcrumb-content">
                        <div class="au-breadcrumb-left">
                            <span class="au-breadcrumb-span">You are here:</span>
                            <ul class="list-unstyled list-inline au-breadcrumb__list">
                                <li class="list-inline-item active">
                                    <a href="#">Home</a>
                                </li>
                                <li class="list-inline-item seprate">
                                    <span>/</span>
                                </li>
                                <li class="list-inline-item">Dashboard</li>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
<!-- END BREADCRUMB-->

    <section class="form-content">
        <div class="section__content section__content--p30">
            <div class="container-fluid">
              <div class="col-md-12">
                              {{ form_start(form) }}
                              {{ form_errors(form) }}
                              {{ form_widget(form._token) }}
                              <div class="card">
                                <div class="card-header">
                                  <h3 class="card-title">Extraire les factures</h3>
                                </div>
                                <div class="card-body">
                                  <form action="">
                                    <div class="form-group">
                                      <div class="row align-items-center">
                                        <label class="col-sm-2">{{ form_label(form.from) }}:</label>
                                        <div class="col-sm-10">
                                          {{ form_widget(form.from) }}
                                        </div>
                                      </div>
                                    </div>
                                    <div class="form-group">
                                      <div class="row align-items-center">
                                        <label class="col-sm-2">{{ form_label(form.to) }}:</label>
                                        <div class="col-sm-10">
                                          {{ form_widget(form.to) }}
                                        </div>
                                      </div>
                                    </div>
                                    <div class="btn-list mt-4 text-right">
                                      <button type="button" class="btn btn-secondary btn-space">Cancel</button>
                                      <button type="submit" class="btn btn-primary btn-space">Send message</button>
                                    </div>
                                  </form>
                                </div>
                              </div>
                            </div>
                            {{ form_end(form) }}
            </div>
        </div>
      </section>


{% endblock %}
